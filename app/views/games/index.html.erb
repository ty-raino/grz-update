<div class="addgame">
    <%= link_to 'Add Game', new_game_path, class: "btn btn-primary" %>
</div>
    <h1>Games</h1>
<p> </p>
<ul>
 <% @games.each do |game| %>
    <li>
        <%= link_to game.title, game_path(game) %> 

        <% unless game.reviews.empty? %>
        <%= pluralize game.reviews.count, "review" %>
        <% end %>
    </li>
 <% end %>
</ul>
