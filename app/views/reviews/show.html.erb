<h1><%= @review.game.title %> Review<br></h1>

<h1>By <%= @review.user.username || @review.user.full_name %></h1>
<h3><%= @review.posted %> ãƒ» <%= @review.last_updated %> </h3>

<h4> Rating: <%= @review.rating %><br></h4>
<%= @review.content %>

<p> </p>

<% if user_signed_in? && current_user.id == @review.user_id %>
    <%= link_to 'Edit review', edit_review_path(@review), class: "btn btn-primary" %>

    <%= form_tag(review_path(@review), method: :delete, style: 'display: inline-block;') do %>
    <%= submit_tag "Delete review", class: "btn btn-primary", data: { confirm: "Are you sure you want to delete this review?"}%>
    <% end %>
<% end %>


