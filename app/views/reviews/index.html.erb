<h1>Reviews</h1>

<%= form_tag(reviews_path, method: 'get') do %>
<label for="sort">Sort by</label>
  <select name="sort">
    <option <%= 'selected' if params[:sort] == '' %> value="">None</option>
    <option <%= 'selected' if params[:sort] == 'most_recent' %> value="most_recent">Most Recent</option>
    <option <%= 'selected' if params[:sort] == 'oldest' %> value="oldest">Oldest</option>
  </select>
<%= submit_tag "Sort Results", class: "btn btn-outline-primary btn-sm"%>
<% end %>
