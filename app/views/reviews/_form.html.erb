<%= show_errors_for(review)%>

    <%= form_for review do |f| %>
      <%= f.collection_select :game_id, Game.all, :id, :title, include_blank: "Choose a game" %>
    <p> </p>
<div class="form-group">
    <%= f.text_field :rating, placeholder: "Rating (1-5)", class: "form-control" %>
    <p> </p>
            <div class="textarea">
          <%= f.text_area :content, class: "form-control", placeholder: "Write your review..." %>
          </div>
        </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
 <br>
<%= f.submit class: "btn btn-primary"  %>
<% end %>
